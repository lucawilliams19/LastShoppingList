{
  "name": "shopping-list",
  "version": "1.0.0",
  "engines": {
    "node": "14.15.1"
  },
  "description": "Shopping list built with MERN stack",
  "main": "server.js",
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && run build --prefix client"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "concurrently": "^6.2.0",
    "express": "^4.17.1",
    "mongoose": "^5.12.14",
    "react": "^17.0.2"
  },
  "devDependencies": {
    "nodemon": "^2.0.7"
  }
}
